<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="1000.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);"
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.phoneshop.fxui.login.SignUpUIController">
   
   <children>
      <!-- Main SignUp Card -->
      <StackPane AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" 
                 AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
         
         <HBox style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 5);" 
               prefHeight="450.0" prefWidth="750.0">
            
            <!-- Left Section: Brand & Image -->
            <VBox alignment="CENTER" spacing="15" prefWidth="375" 
                  style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef); -fx-background-radius: 20 0 0 20;">
               
               <!-- Logo Section -->
               <VBox alignment="CENTER" spacing="12" style="-fx-padding: 30;">
                  <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                     <image>
                        <Image url="@/images/logo6.png" />
                     </image>
                  </ImageView>
                  
                  <Label text="MOBILESHOP" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
                  
                  <Label text="Tham gia cùng chúng tôi" 
                         style="-fx-font-size: 16px; -fx-text-fill: #6b7280; -fx-font-style: italic;"/>
               </VBox>
               
               <!-- Phone Image -->
               <ImageView fitHeight="200" fitWidth="250" preserveRatio="true" 
                          style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                  <image>
                     <Image url="@/images/iphone-11-64g.jpg" />
                  </image>
               </ImageView>
               
               <!-- Benefits -->
               <VBox alignment="CENTER" spacing="8" style="-fx-padding: 15;">
                  <Label text="🎁 Ưu đãi đặc biệt cho thành viên mới" 
                         style="-fx-font-size: 14px; -fx-text-fill: #374151; -fx-font-weight: 600;"/>
                  <Label text="🚚 Miễn phí vận chuyển lần đầu" 
                         style="-fx-font-size: 14px; -fx-text-fill: #374151; -fx-font-weight: 600;"/>
                  <Label text="💎 Tích điểm và nhận quà tặng" 
                         style="-fx-font-size: 14px; -fx-text-fill: #374151; -fx-font-weight: 600;"/>
               </VBox>
            </VBox>
            
            <!-- Right Section: SignUp Form -->
            <VBox alignment="CENTER" spacing="25" prefWidth="375" style="-fx-padding: 40; -fx-background-radius: 0 20 20 0;">
               
               <!-- Welcome Text -->
               <VBox alignment="CENTER" spacing="10">
                  <Label text="Tạo tài khoản mới" 
                         style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
                  <Label text="Điền thông tin để bắt đầu mua sắm" 
                         style="-fx-font-size: 16px; -fx-text-fill: #6b7280;"/>
               </VBox>
               
               <!-- SignUp Form -->
               <VBox spacing="15" prefWidth="280" alignment="CENTER">
                  
                  <!-- Username Field -->
                  <VBox spacing="6" prefWidth="280">
                     <Label text="Tài khoản" 
                            style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
                     <MFXTextField fx:id="txtUserName" 
                                   promptText="Nhập tài khoản của bạn"
                                   prefWidth="280"
                                   prefHeight="45"
                                   style="
                                       -fx-font-size: 16px;
                                       -fx-prompt-text-fill: #9ca3af;
                                       -fx-background-color: #f9fafb;
                                       -fx-background-radius: 12;
                                       -fx-border-radius: 12;
                                       -fx-border-color: #e5e7eb;
                                       -fx-border-width: 1;
                                       -fx-padding: 12 16;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </MFXTextField>
                     <Label fx:id="lbMessage1" 
                            style="-fx-font-size: 12px; -fx-text-fill: #ef4444; -fx-font-weight: 500;" />
                  </VBox>
                  
                  <!-- Password Field -->
                  <VBox spacing="6" prefWidth="280">
                     <Label text="Mật khẩu" 
                            style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
                     <MFXPasswordField fx:id="txtPassword" 
                                       promptText="Nhập mật khẩu của bạn"
                                       prefWidth="280"
                                       prefHeight="45"
                                       style="
                                           -fx-font-size: 16px;
                                           -fx-prompt-text-fill: #9ca3af;
                                           -fx-background-color: #f9fafb;
                                           -fx-background-radius: 12;
                                           -fx-border-radius: 12;
                                           -fx-border-color: #e5e7eb;
                                           -fx-border-width: 1;
                                           -fx-padding: 12 16;
                                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </MFXPasswordField>
                     <Label fx:id="lbMessage2" 
                            style="-fx-font-size: 12px; -fx-text-fill: #ef4444; -fx-font-weight: 500;" />
                  </VBox>
                  
                  <!-- Name Field -->
                  <VBox spacing="6" prefWidth="280">
                     <Label text="Họ và tên" 
                            style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
                     <MFXTextField fx:id="txtName" 
                                   promptText="Nhập họ và tên của bạn"
                                   prefWidth="280"
                                   prefHeight="45"
                                   style="
                                       -fx-font-size: 16px;
                                       -fx-prompt-text-fill: #9ca3af;
                                       -fx-background-color: #f9fafb;
                                       -fx-background-radius: 12;
                                       -fx-border-radius: 12;
                                       -fx-border-color: #e5e7eb;
                                       -fx-border-width: 1;
                                       -fx-padding: 12 16;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </MFXTextField>
                     <Label fx:id="lbMessage3" 
                            style="-fx-font-size: 12px; -fx-text-fill: #ef4444; -fx-font-weight: 500;" />
                  </VBox>
                  
                  <!-- Phone Field -->
                  <VBox spacing="6" prefWidth="280">
                     <Label text="Số điện thoại" 
                            style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
                     <MFXTextField fx:id="txtPhoneNum" 
                                   promptText="Nhập số điện thoại của bạn"
                                   prefWidth="280"
                                   prefHeight="45"
                                   style="
                                       -fx-font-size: 16px;
                                       -fx-prompt-text-fill: #9ca3af;
                                       -fx-background-color: #f9fafb;
                                       -fx-background-radius: 12;
                                       -fx-border-radius: 12;
                                       -fx-border-color: #e5e7eb;
                                       -fx-border-width: 1;
                                       -fx-padding: 12 16;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </MFXTextField>
                     <Label fx:id="lbMessage4" 
                            style="-fx-font-size: 12px; -fx-text-fill: #ef4444; -fx-font-weight: 500;" />
                  </VBox>
                  
                  <!-- Email Field -->
                  <VBox spacing="6" prefWidth="280">
                     <Label text="Email" 
                            style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
                     <MFXTextField fx:id="txtEmail" 
                                   promptText="Nhập email của bạn"
                                   prefWidth="280"
                                   prefHeight="45"
                                   style="
                                       -fx-font-size: 16px;
                                       -fx-prompt-text-fill: #9ca3af;
                                       -fx-background-color: #f9fafb;
                                       -fx-background-radius: 12;
                                       -fx-border-radius: 12;
                                       -fx-border-color: #e5e7eb;
                                       -fx-border-width: 1;
                                       -fx-padding: 12 16;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </MFXTextField>
                     <Label fx:id="lbMessage5" 
                            style="-fx-font-size: 12px; -fx-text-fill: #ef4444; -fx-font-weight: 500;" />
                  </VBox>
                  
                  <!-- Buttons -->
                  <HBox spacing="12" alignment="CENTER" prefWidth="280">
                     <MFXButton fx:id="btnBack" 
                                onAction="#btnBackClick" 
                                text="Quay lại"
                                prefWidth="130"
                                prefHeight="45"
                                style="
                                    -fx-background-color: #6b7280; 
                                    -fx-text-fill: white; 
                                    -fx-font-size: 16px;
                                    -fx-font-weight: 600;
                                    -fx-background-radius: 12;
                                    -fx-padding: 12 20;
                                    -fx-effect: dropshadow(gaussian, rgba(107,114,128,0.3), 6, 0, 0, 2);">
                        <graphic>
                           <MFXFontIcon description="mfx-chevron-left" size="20" />
                        </graphic>
                        <font>
                           <Font size="16.0" />
                        </font>
                     </MFXButton>
                     
                     <MFXButton fx:id="btnSubmit" 
                                onAction="#btnSubmitClick" 
                                text="Đăng ký"
                                prefWidth="130"
                                prefHeight="45"
                                style="
                                    -fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); 
                                    -fx-text-fill: white; 
                                    -fx-font-size: 16px;
                                    -fx-font-weight: bold;
                                    -fx-background-radius: 12;
                                    -fx-padding: 12 20;
                                    -fx-effect: dropshadow(gaussian, rgba(102,126,234,0.4), 10, 0, 0, 3);">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </MFXButton>
                  </HBox>
               </VBox>
               
               <!-- Footer -->
               <VBox alignment="CENTER" spacing="5">
                  <Label text="Bằng cách đăng ký, bạn đồng ý với" 
                         style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" />
                  <HBox alignment="CENTER" spacing="5">
                     <Label text="Điều khoản sử dụng" 
                            style="-fx-font-size: 12px; -fx-text-fill: #667eea; -fx-font-weight: 600; -fx-underline: true;" />
                     <Label text="và" 
                            style="-fx-font-size: 12px; -fx-text-fill: #6b7280;" />
                     <Label text="Chính sách bảo mật" 
                            style="-fx-font-size: 12px; -fx-text-fill: #667eea; -fx-font-weight: 600; -fx-underline: true;" />
                  </HBox>
               </VBox>
            </VBox>
         </HBox>
      </StackPane>
   </children>
</AnchorPane>
